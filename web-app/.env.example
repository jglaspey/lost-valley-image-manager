# Lost Valley Image Manager Environment Configuration
# Copy this file to .env.local for development or .env.production for production

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=5005
HOST=0.0.0.0

# Database Configuration (choose one based on environment)
# Development: Use relative path to project root
DATABASE_PATH=../image_metadata.db

# Production: Use Docker volume mount path
# DATABASE_PATH=/app/data/image_metadata.db

# API Configuration
REACT_APP_API_URL=http://localhost:5005/api

# Google Drive API Configuration (required - copy from your Google Cloud Console)
# Place credentials.json and token.json in the project root
GOOGLE_CREDENTIALS_PATH=./credentials.json
GOOGLE_TOKEN_PATH=./token.json

# Upload and Storage Paths
THUMBNAILS_DIR=./thumbnails
UPLOAD_DIR=./uploads

# Application Settings
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/tiff

# Security Settings
CORS_ORIGIN=*
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log